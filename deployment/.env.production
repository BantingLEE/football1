# Environment Configuration for Production

# Database
MONGODB_HOST=mongodb-service
MONGODB_PORT=27017
MONGODB_DATABASE=football_manager
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Cache
REDIS_HOST=redis-service
REDIS_PORT=6379

# Message Broker
RABBITMQ_HOST=rabbitmq-service
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=CHANGE_ME_SECURE_PASSWORD

# JWT
JWT_SECRET=CHANGE_ME_TO_RANDOM_256_BIT_SECRET
JWT_EXPIRATION=7d

# API Keys
OPENAI_API_KEY=CHANGE_ME

# Services
API_GATEWAY_PORT=3001
CLUB_SERVICE_PORT=3002
PLAYER_SERVICE_PORT=3003
MATCH_SERVICE_PORT=3004
ECONOMY_SERVICE_PORT=3005
YOUTH_SERVICE_PORT=3006
LEAGUE_SERVICE_PORT=3007
MESSAGE_SERVICE_PORT=3008
NOTIFICATION_SERVICE_PORT=3009
FRONTEND_PORT=3000

# Frontend
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com

# Deployment Environment
NODE_ENV=production
