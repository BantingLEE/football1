{
  "name": "notification-service",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(isomorphic-dompurify)/)"
    ],
    "moduleNameMapper": {
      "^isomorphic-dompurify$": "<rootDir>/tests/__mocks__/isomorphic-dompurify.ts"
    }
  },
  "dependencies": {
    "@shared": "file:../../shared",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "isomorphic-dompurify": "^2.35.0",
    "joi": "^17.11.0",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
